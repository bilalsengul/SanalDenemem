@model List<SanalDenemem.MvcWebUI.Entity.Exam>
@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-12 text-center fh5co-heading">
                <h2> Sınavlar</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 animate-box">
                    <div class="course">
                        <a href="#" class="course-img" style="background-image: url(../Content/edutemplate/images/project-1.jpg);">
                        </a>
                        <div class="desc">
                            <h3><a href="#">@item.Title</a></h3>
                            @if (Request.IsAuthenticated && User.IsInRole("premiumMember"))
                            {
                                <span><a href="@Url.Action("Exams", "Home", new { id=item.Id})" class="btn btn-primary btn-sm btn-course">Sınava Gir</a></span>
                            }
                            else
                            {
                                <span><a href="@Url.Action("Exams", "Home")" class="btn btn-primary btn-sm btn-course">Premium Ol</a></span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>