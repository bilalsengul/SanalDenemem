<script>
    let dizi = [];

    function sendAnswer(e) {
        var arr = window.location.href.split('/');
        var data = {
            examId: arr[arr.length - 1],
            quesId: e.name.split('-')[0],
            optId: e.id.split('-')[0],
            memberId: @Model.Item1
        };
        for (var i = 0; i < dizi.length; i++) {
            if (dizi[i].examId == data.examId && dizi[i].quesId == data.quesId) {
                dizi.splice(i, 1);
            }
        }
        dizi.push(data);
    }

    function finishExam() {
        console.log("finisexam girdi.")
        $.ajax({
            type: "POST",
            url: '@Url.Action("ExamResult", "Home")',
            data: { dizi: dizi },
            success: function (response) {
                window.location.href = '@Url.Action("Profile", "Members")';
                console.log("basarılı.")
            },
            error: function (err) {
                alert(err);
            }
        });
    }

    function emptyOption(quesId, examId) {
        $('input[name=' + quesId + '-ques]').attr('checked', false);
        for (var i = 0; i < dizi.length; i++) {
            if (dizi[i].examId == examId && dizi[i].quesId == quesId) {
                dizi.splice(i, 1);
            }
        }
    }

</script>













