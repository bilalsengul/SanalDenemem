                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Base" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Base", new { area = "Admin" })">Anasayfa</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminManager" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "AdminManager", new { area = "" })">Hesap Yönetimi</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ExamTypes" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "ExamTypes", new { area = "Admin" })">Sınav Tipleri</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Lessons" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Lessons", new { area = "Admin" })">Dersler</a>
