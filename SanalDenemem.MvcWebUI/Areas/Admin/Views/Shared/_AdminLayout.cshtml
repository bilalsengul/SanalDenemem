    <main role="main">

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    @RenderBody()
                </div>
            </div>
            <hr>
        </div>
    </main>

    <footer class="container-fluid bg-dark" style="bottom: 0 !important; position: fixed; z-index: 99; color: white; padding-top: 0.8rem;">
        <p>&copy; Company 2020</p>
    </footer>

